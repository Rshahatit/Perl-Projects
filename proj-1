        if ($input eq 'Hi there') {
        print "Hi, $name, how are you?\n";
        my $feeling = <STDIN>;
        print "why are you $feeling? ";
        my $reason = <STDIN>;
        print "Oh I see, just know everything works out in the end. \n";
        }
        print "good bye now.\n";

}

